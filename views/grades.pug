extends layout

block content
  h1= title
  - var results = [{grade:"B", gradeMarks: 99, gradeCourse: "Data Visualization"},{grade:"A", gradeMarks: 95, gradeCourse: "Civil"},{grade:"A", gradeMarks: 87, gradeCourse: "Data Analytics"}];
  - let destination = `/grades1/create`
    button.btn( class="btn-primary ml-1", onclick= `dispatch("${destination}")`) Create New Grades Item

  div(class="container-fluid")
    div(class="row m-1")
      each q,index in results
        -let destination1 = `dispatch(\"/grades1/update?id=${'q._id'}\")`
        -let destination2 = `dispatch(\"/grades1/detail?id=${'q._id'}\")`
        -let destination3 = `dispatch(\"/grades1/delete?id=${'q._id'}\")`
        div(class="col-sm-2" onclick=`buy(${index})`) #{q.grade}, #{q.gradeMarks}, #{q.gradeCourse}
        button.btn(class="btn-primary ml-1", onclick=destination1) Update
        button.btn(class="btn-primary ml-1", onclick=destination2) Detail
        button.btn(class="btn-primary ml-1", onclick=destination3) Delete
        script.
            function buy(x) 
            {
                alert(`your index is ${x}`)
            }
            function dispatch(path) {
            window.location.href=path
            }